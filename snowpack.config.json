{
  "extends": "@snowpack/app-scripts-preact",
  "scripts": {
    "run:lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "run:lint::watch": "watch \"$1\" src"
  },
  "install": [
    "styled-components"
  ],
  "installOptions": {
    "alias": {
      "react": "preact/compat",
      "react-dom": "preact/compat"
    }
  },
  "plugins": ["@snowpack/plugin-webpack"]
}